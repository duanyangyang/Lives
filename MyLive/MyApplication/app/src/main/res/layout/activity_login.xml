<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bwie.test.jufanlive.activity.LoginActivity">
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@mipmap/li_bg_splash"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/li_login_logo"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/li_login_slogan"
        android:id="@+id/imageView"
        android:layout_below="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2"
        android:layout_marginTop="15dp" />
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="75dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
        <RadioButton
            android:id="@+id/rb1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:button="@null"
            android:background="@mipmap/li_icon_wx_normal"/>
        <RadioButton
            android:id="@+id/rb2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:button="@null"
            android:background="@mipmap/li_icon_qq_normal"
            android:layout_marginLeft="15dp"/>
        <RadioButton
            android:id="@+id/rb3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:button="@null"
            android:layout_marginLeft="15dp"
            android:background="@mipmap/li_icon_ph_normal"/>
        <RadioButton
            android:id="@+id/rb4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:button="@null"
            android:layout_marginLeft="15dp"
            android:background="@mipmap/li_icon_wb_normal"/>
    </RadioGroup>
</RelativeLayout>
